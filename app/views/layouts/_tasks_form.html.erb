<%= form_for @task, url:api_v1_tasks_path do |f| %>
  <div class="row">
    <div class="col-md-1">
      <%= f.label :name, class: 'form-label-control' %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>
    <%= f.submit "submit", class: 'btn btn-success' %>
  </div>
<% end %>
